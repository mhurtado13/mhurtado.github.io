---
import { Image } from "astro:assets";
import CTF from "../../public/CTF.png";
import multideconv from "../../public/multideconv.png";
import pipeML from "../../public/pipeML.png";

interface Project {
  title: string;
  image: ImageMetadata;
  link: string;
  preview: string;
  status: string;
}

const software: Project[] = [
  {
    title: "multideconv",
    image: multideconv as ImageMetadata,
    link: "https://github.com/VeraPancaldiLab/multideconv",
    preview: "https://verapancaldilab.github.io/multideconv/",
    status: "Released",
  },
  {
    title: "pipeML",
    image: pipeML as ImageMetadata,
    link: "https://github.com/VeraPancaldiLab/pipeML",
    preview: "https://verapancaldilab.github.io/pipeML/",
    status: "Released",
  },
  {
    title: "CellTFusion",
    image: CTF as ImageMetadata,
    link: "https://github.com/VeraPancaldiLab/CellTFusion",
    preview: "https://github.com/VeraPancaldiLab/CellTFusion",
    status: "On development",
  }
];
---

<section
  id="softwares"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Softwares</h3>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        software.map((project) => (
          <div class="group flex flex-col items-center">
            <a
              href={project.preview}
              target="_blank"
              rel="noopener noreferrer"
              class="block"
            >
              <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 mb-4 flex justify-center">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-64 h-auto object-contain group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <div class="flex items-center px-3">
                <div class="flex-grow">
                  <h4 class="text-2xl font-semibold text-center">{project.title}</h4>
                  <span class="py-1 text-sm text-[var(--white-icon)] text-center">
                    {project.status}
                  </span>
                </div>
                <div class="flex gap-2 ml-auto">
                  <a
                    target="_blank"
                    href={project.link}
                    aria-label="GitHub"
                    class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-7"
                    >
                      <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z" />
                    </svg>
                  </a>
                  <a
                    target="_blank"
                    href={project.preview}
                    aria-label="Preview"
                    class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-7"
                    >
                      <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                    </svg>
                  </a>
                </div>
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
