---
import cvPreview from "../../public/cv_preview.png";
---

<section
  id="resume"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto flex flex-col md:flex-row gap-8">
    <div class="flex-1">
      <h3 class="text-4xl md:text-5xl font-medium mb-8">Curriculum Vitae</h3>
      <p class="text-lg mb-6">You can download my CV below:</p>
      <div class="flex gap-4">
        <a
          href="/CV2025.pdf"
          download
          class="inline-block bg-[var(--sec)] text-white py-2 px-6 rounded-lg hover:bg-[var(--sec-dark)]"
        >
          Download CV
        </a>
      </div>
    </div>

    <div class="flex-1">
      <img
        src={cvPreview.src} 
        alt="CV Preview"
        class="rounded-lg shadow-lg w-full md:w-3/4 mx-auto"
      />
    </div>
  </div>
</section>
